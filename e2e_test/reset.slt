# Test with timezone variable
statement ok
SET timezone = 'Asia/Shanghai';

query T
SHOW timezone;
----
Asia/Shanghai

statement ok
RESET timezone;

query T
SHOW timezone;
----
UTC

# Test with client_min_messages variable
statement ok
SET client_min_messages = 'debug';

query T
SHOW client_min_messages;
----
debug

statement ok
RESET client_min_messages;

query T
SHOW client_min_messages;
----
notice

# Test with statement_timeout variable
statement ok
SET statement_timeout = 30000;

query T
SHOW statement_timeout;
----
30000

statement ok
RESET statement_timeout;

query T
SHOW statement_timeout;
----
0
